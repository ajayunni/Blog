<div class="container d-flex justify-content-center">
	<h3 class="display-2">New Post!</h3>
</div>
<div class="container">
	<form action="/blogs" method="POST">
	   <input class="form-control form-control-lg" name="blog[title]" type="text" placeholder="Blog Title" style="margin-top:1rem;">
		<input class="form-control" type="text" name="blog[image]" placeholder="Image URL" style="margin-top:1rem;">
	  <div class="form-group" style="margin-top:1rem;">
		<label for="exampleFormControlTextarea1" >Content</label>
		<textarea  minlength="200" name="blog[body]" class="form-control" id="exampleFormControlTextarea1" name="blog[body]" placeholder="start typing here..." rows="3"></textarea>
	  </div>
	  <input type="submit" class="btn btn-primary btn-lg btn-block">
	</form>
</div>
