<%- include("partials/header.ejs") %>
<link rel="stylesheet" type="text/css" href="/stylesheet/blog.css">
<%if(success&&success.length>0){%>
		<div class="container">
			<div class="alert alert-success" role="alert">
			  <%=success%>
			</div>
		</div>
	<%}%>
<div class="container bootstrap snippet">
    <div class="row">
  		<div class="col-sm-10"><h1>User name</h1></div>
    </div>
    <div class="row">
  		<div class="col-sm-3"><!--left col-->
      <div class="text-center">
        <img src=<%=user.profilePic%> height="250px" width="250px" alt="avatar"/>
        <h6>Upload a different photo...</h6>
        <form action="/profile?_method=PUT" method="POST">
		   <input class="form-control form-control-lg" name="profile[profilePic]" type="text" placeholder="Image URL" style="margin-top:1rem;">
		</form>
     </div><br>
        </div><!--/col-3-->
    	<div class="col-sm-9">
                  <form class="form" action="##" method="post" id="registrationForm">
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="first_name"><h4>First name</h4></label>
                              <input type="text" class="form-control" name="first_name" id="first_name" placeholder="first name" title="enter your first name if any.">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="password"><h4>Password</h4></label>
                              <input type="password" class="form-control" name="password" id="password" placeholder="password" title="enter your password.">
                          </div>
                      </div>
                      <div class="form-group">
                           <div class="col-xs-12">
                                <br>
                              	<button class="btn btn-lg btn-success" type="submit">Save</button>
                               	<button class="btn btn-lg btn-info" type="reset">Reset</button>
                            </div>
                      </div>
              	</form>
              
              <hr>
        </div><!--/col-9-->
    </div><!--/row-->
<%- include("partials/footer.ejs") %>